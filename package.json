{
  "name": "react-enhanced-reducer-hook",
  "version": "1.0.2",
  "description": "An alternative to React.useReducer that accepts middlewares to do some cool things before and after dispatch.",
  "main": "dist/useEnhancedReducer.cjs.js",
  "module": "dist/useEnhancedReducer.esm.js",
  "repository": "https://github.com/shiningjason/react-enhanced-reducer-hook",
  "author": "Jason Chung <shiningjason1989@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "use-reducer",
    "use-state",
    "redux",
    "redux-middleware",
    "middleware",
    "dispatch"
  ],
  "scripts": {
    "format": "prettier --single-quote --no-semi --write *.js",
    "lint": "eslint *.js",
    "build": "rollup --config",
    "test": "NODE_ENV=test ava"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-rc.2",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.15.1",
    "react": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "rollup": "^0.67.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "verbose": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/env",
          "@babel/react"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react",
      "prettier",
      "prettier/standard"
    ]
  }
}
